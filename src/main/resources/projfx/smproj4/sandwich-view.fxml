                        <Font size="28.0" />
                     </font>
                  </Label>
                  <Label text="Bread" GridPane.rowIndex="1" />
                  <Label text="Protein" GridPane.rowIndex="2" />
                  <Label text="Add-on" GridPane.rowIndex="3" />
                  <Label text="Subtotal" GridPane.rowIndex="4" />
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
